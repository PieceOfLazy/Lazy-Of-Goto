<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/type_fg"
    >

    <LinearLayout
        android:id="@+id/login_view_contents"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintVertical_bias="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <lazy.of.framework.library.widget.widget.CardImageTextView
            android:id="@+id/login_view_google"
            style="@style/HCardImageTextDefaultView"
            android:layout_width="@dimen/dp240"
            android:layout_marginTop="@dimen/dp08"
            app:imageSrc="@drawable/googleg_standard_color_18"
            app:text="@string/sign_in_with_google" />

        <lazy.of.framework.library.widget.widget.CardImageTextView
            android:id="@+id/login_view_anonymous"
            style="@style/HCardImageTextDefaultView"
            android:layout_width="@dimen/dp240"
            android:layout_marginTop="@dimen/dp08"
            android:layout_marginBottom="@dimen/dp08"
            app:text="@string/sign_in_with_anonymous"
            />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>